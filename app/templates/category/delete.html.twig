{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_delete'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_delete'|trans({'%id%': category.id|default('')}) }}</h1>
    {% if category is defined and category|length %}
        <dl class="dl-horizontal">
        <dt>{{ 'label.title'|trans }}</dt>
        <dd>{{  category.title }}</dd>
    {% endif %}
    </dl>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <br>

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-danger"/>
    </div>
    <br>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-light">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}